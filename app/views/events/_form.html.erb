<div class="panel panel-default">
	 <div class="panel-body">
		<%= simple_form_for(@event, html: {class: 'form-horizontal' }) do |f| %>

				<%= f.input :event_name, label: 'Event Name' %> 
				<%= f.input :description, label: 'Description' %> 
				<%= f.input :sdate, as: :date, label: 'Start Date' %> 
				<%= f.input :edate, as: :date, label: 'End Date' %> 
				<%= f.input :link, placeholder: 'www.example.com' %> 
				<%= f.input :active, label: 'Active?', inline_label: 'Yes' %>
				<%= f.button :submit, 	class: "btn btn-default" %>&nbsp;<%= link_to "Cancel", events_path, 
										class: "btn btn-default" %>
		<% end %>
	</div>
</div>